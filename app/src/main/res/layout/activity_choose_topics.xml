<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4DB6AC"
    tools:context="com.example.codetribe.myquizapp.ChooseTopics">


    <ImageView
        android:id="@+id/quiz_image"
        android:src="@drawable/phex"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/choose_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_topic"
        android:layout_centerHorizontal="false"
        android:textSize="30sp"
        android:textAlignment="inherit"
        android:textColor="#ECEFF1"
        android:layout_marginTop="150dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_below="@id/choose_topic">


        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333"
            android:text="Basketball"
            android:background="#B2EBF2"
            android:alpha="0.75"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:onClick="basketBallTopic"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333"
            android:text="old school hip hop"
            android:background="#B2EBF2"
            android:alpha="0.75"
            android:textColor="#004D40"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.333"
            android:text=""
            android:background="#B2EBF2"
            android:alpha="0.75"
            android:textColor="#004D40"
            android:textStyle="bold"/>


    </LinearLayout>


</RelativeLayout>
